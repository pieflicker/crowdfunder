<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">CrowdFunder</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if current_page? root_path %>">
            <%= link_to 'Home', :root %>
          </li>
          <li class="<%= 'active' if controller_name == "projects" %>">
            <%= link_to 'Projects', :projects %>
          </li>
          <div class="pull-right">
            <% if logged_in? %>
                <%= link_to 'Logout', session_path, method: :delete, class: 'btn btn-primary' %>
            <% else %>
                <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary' %>
                <%= link_to 'Login', new_session_path, class: 'btn btn-primary' %>
            <% end %>
          </div>
        </ul>
      </div>
    </div>
  </div>
</div>


